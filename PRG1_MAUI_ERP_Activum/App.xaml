<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PRG1_MAUI_ERP_Activum"
             x:Class="PRG1_MAUI_ERP_Activum.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/CustomStyling.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="NavBarColor">#134f5c</Color>
            <Color x:Key="NavBarTextColor">White</Color>

            <Style TargetType="Shell">
                <Setter Property="Shell.NavBarHasShadow" Value="False" />
                <Setter Property="Shell.BackgroundColor" Value="{StaticResource NavBarColor}" />
                <Setter Property="Shell.ForegroundColor" Value="{StaticResource NavBarTextColor}" />
                <Setter Property="Shell.TitleColor" Value="{StaticResource NavBarTextColor}" />
                <Setter Property="Shell.DisabledColor" Value="{StaticResource NavBarTextColor}" />
                <Setter Property="Shell.UnselectedColor" Value="{StaticResource NavBarTextColor}" />
                <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource NavBarColor}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

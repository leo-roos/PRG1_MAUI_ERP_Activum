<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRG1_MAUI_ERP_Activum.View.SalaryPage"
             Title="Lön &amp; Bonus"
             Style="{StaticResource Key=BasePageStyle}">
    <ScrollView>
        <Grid
            ColumnDefinitions="*"
            RowDefinitions="Auto, Auto, 2, Auto"
            RowSpacing="30"
            Padding="20"
            HorizontalOptions="Center"
        >
            <Label
                Grid.Row="0"
                Text="Lön &amp; Bonus"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <VerticalStackLayout
                Grid.Row="1"
                Spacing="10"
            >
                <Label HorizontalOptions="Center" Style="{StaticResource SubHeadline}" Text="Beräkna Månadslön" />
                <Label
                    Margin="0, 0, 0, 10"
                    Text="Skriv in hur mycket försäljning du har gjort denna månad, du kommer få 12% provision av din försäljning för denna månad + din grundlön."
                />

                <Label Text="Grundlön" />
                <Entry Text="26,000 kr" Style="{StaticResource Key=ReadOnlyEntryStyle}" />

                <Label Text="Din försäljning denna månad" />
                <Entry x:Name="MySalesEntry" Text="" Placeholder="15000" />

                <Label Text="Löne skatt" />
                <Entry Text="32%" IsReadOnly="True" Style="{StaticResource Key=ReadOnlyEntryStyle}" />

                <Border
                    x:Name="ExpectedSalaryBorder"
                    IsVisible="False"
                    Padding="10"
                >
                    <VerticalStackLayout>
                        <Label Text="Beräknad Månadslön" FontAttributes="Bold" />
                        <Label x:Name="ExpectedSalaryResult" FontSize="18" Text="35,000kr" />
                    </VerticalStackLayout>
                </Border>

                <Button Text="Beräkna Månadslön" Clicked="CalculateSalary_Clicked" />
            </VerticalStackLayout>

            <Border Grid.Row="2"></Border>

            <VerticalStackLayout
                Grid.Row="3"
                Spacing="10"
            >
                <Label HorizontalOptions="Center" Style="{StaticResource SubHeadline}" Text="Beräkna Semesterlön" />
                <Label
                    Margin="0, 0, 0, 10"
                    Text="För att beräkna din semesterlön så behöver du ange din genomsmittliga försäljning från dem senaste 11 månaders arbete."
                />

                <Label Text="Genomsnittlig försäljning (11 månader)" />
                <Entry x:Name="MyAverageSalesEntry" Text="" Placeholder="35000" Keyboard="Numeric" />

                <Border
                    x:Name="ExpectedSemesterSalaryBorder"
                    IsVisible="False"
                    Padding="10"
                >
                    <VerticalStackLayout>
                        <Label Text="Beräknad Semsterlön" FontAttributes="Bold" />
                        <Label x:Name="ExpectedSemesterSalaryResult" FontSize="18" Text="35,000kr" />
                    </VerticalStackLayout>
                </Border>

                <Button Text="Beräkna Semesterlön" Clicked="CalculateSemesterSalary_Clicked" />

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
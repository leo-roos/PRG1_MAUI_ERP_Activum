<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRG1_MAUI_ERP_Activum.View.CalculatorPage"
             Title="Kalkylator"
             Style="{StaticResource Key=BasePageStyle}">
    <Grid RowDefinitions="Auto, *, *, *, *, *, *"
      ColumnDefinitions="*, *, *, *"
      Padding="20"
      ColumnSpacing="2"
      RowSpacing="2">
        <!-- Display för beräkningar -->
        <Entry x:Name="EntryCalculations"
           Grid.Row="0"
           Grid.ColumnSpan="4"
           IsReadOnly="True"
           FontSize="24"
           
           VerticalOptions="Center"

           HorizontalTextAlignment="End"/>

        <!-- Display för resultat -->
        <Entry x:Name="EntryResult"
           Grid.Row="1"
           Grid.ColumnSpan="4"
           IsReadOnly="True"
           FontSize="32"
           VerticalOptions="Center"

           HorizontalTextAlignment="End"/>

        <!-- Rad 1 -->
        <Button Grid.Row="2" Grid.Column="0" Text="C" Clicked="ClearButton" />
        <Button Grid.Row="2" Grid.Column="1" Text="M+" Clicked="StoreInMemoryButton" />
        <Button Grid.Row="2" Grid.Column="2" Text="M-" Clicked="CatchFromMemoryButton" />
        <Button Grid.Row="2" Grid.Column="3" Text="/" Clicked="OperatorButton" />

        <!-- Rad 2 -->
        <Button Grid.Row="3" Grid.Column="0" Text="7" Clicked="NumberButton" />
        <Button Grid.Row="3" Grid.Column="1" Text="8" Clicked="NumberButton" />
        <Button Grid.Row="3" Grid.Column="2" Text="9" Clicked="NumberButton" />
        <Button Grid.Row="3" Grid.Column="3" Text="*" Clicked="OperatorButton" />

        <!-- Rad 3 -->
        <Button Grid.Row="4" Grid.Column="0" Text="4" Clicked="NumberButton" />
        <Button Grid.Row="4" Grid.Column="1" Text="5" Clicked="NumberButton" />
        <Button Grid.Row="4" Grid.Column="2" Text="6" Clicked="NumberButton" />
        <Button Grid.Row="4" Grid.Column="3" Text="-" Clicked="OperatorButton" />

        <!-- Rad 4 -->
        <Button Grid.Row="5" Grid.Column="0" Text="1" Clicked="NumberButton" />
        <Button Grid.Row="5" Grid.Column="1" Text="2" Clicked="NumberButton" />
        <Button Grid.Row="5" Grid.Column="2" Text="3" Clicked="NumberButton" />
        <Button Grid.Row="5" Grid.Column="3" Text="+" Clicked="OperatorButton" />

        <!-- Rad 5 -->
        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Text="0" Clicked="NumberButton" HorizontalOptions="FillAndExpand" />
        <Button Grid.Row="6" Grid.Column="2" Text="." Clicked="NumberButton" />
        <Button Grid.Row="6" Grid.Column="3" Text="=" Clicked="EqualButton" />
    </Grid>
</ContentPage>